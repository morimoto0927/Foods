<div class="user-container">
<div><%= link_to '←', user_path(@user), data: {"turbolinks" => false}, class: 'user-back' %></div>
<div class="user-name">  
  <%= @user.username %>
</div>
</div>
<div class="user-follow">
<h2>フォロワー</h2>
<hr width="100%">
</div>
<div class="follow">
<% @user.followers.each do |user| %>
 <div class="user-menu">
 <p><%= link_to user.username, user_path(user.id), data: {"turbolinks" => false}, class: 'follow-name' %></p>
 </div>
<% end %>
</div>
