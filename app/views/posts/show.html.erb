<div class="post-index">
  <div class="container">
    <div class="post-show-user">
      
    </div>
    <div class="post-show-title">
    <p>タイトル</p>
    <h2><%= @post.title %>
    </div>
    <div class="post-show-address">
    <p>住所</p>
    <h2><%= @post.address %>
    </div>
    <div class="post-show-body">
    <p>レビュー</p>
    <h2><%= @post.body %>
    </div>
    <% if @post.image_id.present? %>
      <%= image_tag attachment_url(@post, :image, :fill, 350, 250, format: "jpg") %>
    <% end %>
    <% if @post.user_id == current_user.id %>
    <div class="post-change">
      <%= link_to "編集", edit_post_path(@post) %>
      <%= link_to "削除", post_path(@post), method: :delete %>
    </div>
    <% end %>
    <div class="favorite">
      <%= render 'posts/favorite' %>
    </div>
    <div class="comment-form">
      <%= render 'posts/comment' %>
      <%= render 'posts/comment_form' %>
    </div>
  </div>
</div>
